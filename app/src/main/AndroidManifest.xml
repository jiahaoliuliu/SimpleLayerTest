<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiahaoliuliu.simplelayertest" >

    <!-- Standard permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Signature-only permissions -->
    <permission
        android:name="com.jiahaoliuliu.simplelayertest.permission.LAYER_PUSH"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.jiahaoliuliu.simplelayertest.permission.LAYER_PUSH" />

    <permission
        android:name="com.jiahaoliuliu.simplelayertest.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.jiahaoliuliu.simplelayertest.permission.C2D_MESSAGE" />

    <!-- LayerClient.sendLogs() permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Your custom "com.layer.sdk.PUSH" notification Receiver -->
        <receiver
            android:name=".LayerPushReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.layer.sdk.PUSH" />
                <category android:name="com.jiahaoliuliu.simplelayertest" />
            </intent-filter>
        </receiver>

        <!-- Layer's GCM Receiver and Service -->
        <receiver
            android:name="com.layer.sdk.services.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter android:priority="950" >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.jiahaoliuliu.simplelayertest" />
            </intent-filter>
        </receiver>

        <service android:name="com.layer.sdk.services.GcmIntentService" />
    </application>

</manifest>
